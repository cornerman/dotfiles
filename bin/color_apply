#!/bin/sh

xsource="$HOME/.Xresources.$1"
vimsource="$HOME/.vimrc.$1"

ln -fs "$xsource" ~/.Xresources.colors
ln -fs "$vimsource" ~/.vimrc.colors
xrdb -merge ~/.Xresources.colors

# nvim_all_command "<ESC>:source ~/.vimrc.colors<CR>:echo ""<CR>
nvim_all_command "source ~/.vimrc.colors"

case "$1" in
"light")
    sed -i "s/^colors: \*dark$/colors: *light/" ~/.config/alacritty.yml
    ;;
"dark")
    sed -i "s/^colors: \*light$/colors: *dark/" ~/.config/alacritty.yml
    ;;
*)
    ;;
esac
