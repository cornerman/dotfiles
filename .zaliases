dnif () {
    local file=$1
    local DIR=$(pwd)

    while [ ! -z "$DIR" ] && [ ! -f "$DIR/$file" ]; do
        DIR="${DIR%\/*}"
    done

    if [ -z "$DIR" ]; then
        pwd
    else
        echo $DIR
    fi
}

cdnif () {
    cd $(dnif $1)
}

